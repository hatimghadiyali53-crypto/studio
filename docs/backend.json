
{
  "entities": {
    "Employee": {
      "$schema": "http://json-schema.org/draft-07/schema#",
      "title": "Employee",
      "type": "object",
      "description": "Represents an employee in the Paradise ScoopSmart system.",
      "properties": {
        "name": {
          "type": "string",
          "description": "The name of the employee."
        },
        "email": {
          "type": "string",
          "description": "The email address of the employee.",
          "format": "email"
        },
        "role": {
          "type": "string",
          "enum": ["Scooper", "Shift Lead", "Manager"]
        },
        "onboardingStatus": {
          "type": "string",
          "enum": ["Pending", "Completed"]
        },
        "store": {
            "type": "string",
            "enum": ["Coomera", "Ipswich", "Northlakes"]
        },
        "onboardingChecklist": {
            "type": "array",
            "items": {
                "type": "object",
                "properties": {
                    "id": { "type": "string" },
                    "label": { "type": "string" },
                    "completed": { "type": "boolean" }
                },
                "required": ["id", "label", "completed"]
            }
        }
      },
      "required": [
        "name",
        "email",
        "role",
        "onboardingStatus",
        "onboardingChecklist"
      ]
    },
    "Task": {
      "$schema": "http://json-schema.org/draft-07/schema#",
      "title": "Task",
      "type": "object",
      "description": "Represents a task assigned to an employee.",
      "properties": {
        "name": {
          "type": "string"
        },
        "assignedTo": {
          "type": "string",
          "description": "Employee ID"
        },
        "dueDate": {
          "type": "string",
          "format": "date"
        },
        "status": {
          "type": "string",
          "enum": ["Pending", "Completed"]
        },
        "category": {
            "type": "string",
            "enum": ["Daily", "Weekly", "Monthly", "One-Time"]
        }
      },
      "required": [
        "name",
        "assignedTo",
        "dueDate",
        "status",
        "category"
      ]
    },
    "InventoryItem": {
      "$schema": "http://json-schema.org/draft-07/schema#",
      "title": "InventoryItem",
      "type": "object",
      "description": "Represents an item in the inventory.",
      "properties": {
        "name": {
          "type": "string"
        },
        "category": {
          "type": "string",
          "enum": ["Ice Cream", "Toppings", "Cones", "Supplies"]
        },
        "inStock": {
          "type": "number"
        },
        "unit": {
          "type": "string",
          "enum": ["Tubs", "Bags", "Boxes", "Units"]
        },
        "lowThreshold": {
          "type": "number"
        }
      },
      "required": [
        "name",
        "category",
        "inStock",
        "unit",
        "lowThreshold"
      ]
    },
    "RosterShift": {
        "title": "RosterShift",
        "type": "object",
        "description": "Represents the shifts for a single employee for a week.",
        "properties": {
            "employeeId": { "type": "string" },
            "shifts": {
                "type": "object",
                "properties": {
                    "Monday": { "type": "string" },
                    "Tuesday": { "type": "string" },
                    "Wednesday": { "type": "string" },
                    "Thursday": { "type": "string" },
                    "Friday": { "type": "string" }
                }
            }
        },
        "required": ["employeeId", "shifts"]
    },
    "AttendanceRecord": {
        "title": "AttendanceRecord",
        "type": "object",
        "description": "Represents a single clock-in/out record.",
        "properties": {
            "employeeId": { "type": "string" },
            "date": { "type": "string", "format": "date" },
            "clockInTime": { "type": "string", "format": "time" },
            "clockOutTime": { "type": ["string", "null"], "format": "time" },
            "status": { "type": "string", "enum": ["Clocked In", "Clocked Out", "Late"] }
        },
        "required": ["employeeId", "date", "clockInTime", "status"]
    }
  },
  "auth": {
    "providers": [
      "password",
      "anonymous",
      "google.com"
    ]
  },
  "firestore": {
    "/employees/{employeeId}": {
      "schema": { "$ref": "#/entities/Employee" },
      "description": "Stores employee profiles."
    },
    "/tasks/{taskId}": {
      "schema": { "$ref": "#/entities/Task" },
      "description": "Stores tasks."
    },
    "/inventoryItems/{inventoryItemId}": {
      "schema": { "$ref": "#/entities/InventoryItem" },
      "description": "Stores inventory items."
    },
    "/roster/{rosterId}": {
        "schema": { "$ref": "#/entities/RosterShift" },
        "description": "Stores weekly roster schedules."
    },
    "/attendance/{attendanceId}": {
        "schema": { "$ref": "#/entities/AttendanceRecord" },
        "description": "Stores attendance records."
    }
  }
}

    